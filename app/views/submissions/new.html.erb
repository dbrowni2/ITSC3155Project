<%= form_for :submission, url: submissions_path do |f| %>
<p>
    <%= f.radio_button :Preference %>
     <%= f.label :Preference %><br>
    <%= f.radio_button :Location %>
     <%= f.label :Location%><br>
    <%= f.radio_button :Purchases %>
     <%= f.label :Purchases %><br>
  </p>
 
  <p>
    <%= f.label :Description %><br>
    <%= f.text_area :Description %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>